{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "moduleResolution": "node",
        "target": "es6",
        "declaration": true,
        "declarationDir": "./dist",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"]
}
